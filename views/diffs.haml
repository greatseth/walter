- @commit.diffs.each do |d|
  - `pygmentize -f html -O nowrap #{File.expand_path(File.join(File.dirname(d.repo.path), d.a_path))}`.split("\n").each do |line|
    .diff
      - if line.diff_overview_line?
        %pre{ :class => "overview" }
          = Iconv.conv("UTF-8", "LATIN1", line)
      - elsif line.diff_add_line?
        %pre{ :class => "add" }
          = Iconv.conv("UTF-8", "LATIN1", line)
      - elsif line.diff_remove_line?
        %pre{ :class => "remove" }
          = Iconv.conv("UTF-8", "LATIN1", line)
      - elsif line.strip.empty?
        %pre &nbsp;
      - else
        %pre
          = Iconv.conv("UTF-8", "LATIN1", line)
